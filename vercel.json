{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static",
      "config": { "zeroConfig": true } 
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
       "src": "/(.*\\.(js|css|ico|png|jpg|svg))",
       "dest": "/public/$1",
       "headers": { "Cache-Control": "s-maxage=31536000, immutable" }
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}

